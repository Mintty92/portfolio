<div class="container">
	<div class="col-sm-8 col-xs-offset-1 col-xs-10 blog-content">
		<h3 class="text-center"><%= link_to "Create a new post", new_post_path %></h3>
		<% @posts.each do |post| %>
		<div class="col-xs-12">

			<div class="text-center">
				<h2><%= post.title %></h2>
				<h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
				<h6><%= post.user.email %></h6>
			</div>

			<div class="text-center">
				<%= sanitize raw(post.body).html_safe.truncate(358) %>
			</div>

			<div class="text-center">
				<%= link_to "Read post...", post_path(post) %>
			</div>
			<br>
		</div>
		<% end %>
	</div>
</div>